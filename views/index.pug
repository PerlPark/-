doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
  body
    header
      img(src="/images/logo.svg")
      p.currentLocation
    main
      form(action="/search" method="get")
        input(id="routeNoInput" type="text" name="routeNo" placeholder="어느 버스를 찾을까요?")
        input(id="latInput" type="text" name="lat" hidden)
        input(id="lngInput" type="text" name="lng" hidden)
        button(type="submit")
          i(class="material-icons") search
    footer Developed by Perlpark

  script(src="/javascripts/currentLocation.js")
  script(src="/javascripts/searchBus.js")